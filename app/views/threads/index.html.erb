<h1>Listing threads</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @threads.each do |thread| %>
      <tr>
        <td><%= link_to image_tag(thread.image.url(:thumb)), thread.image.url %> </td>
        <td><%= link_to thread.id, controller: "posts", action: "index", thread_id: thread.id %></td>
        <td><%= thread.title %></td>
        <td><%= thread.comment %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Thread', new_thread_path %>
